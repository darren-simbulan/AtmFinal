@{
    ViewData["Title"] = "Login";
}

<style>
    body {
        background-color: #f1f8f4;
        font-family: 'Segoe UI', sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        text-align: center;
    }

        .login-container h2 {
            color: #2e7d32;
            margin-bottom: 25px;
        }

    .form-group {
        margin-bottom: 20px;
        text-align: left;
    }

        .form-group label {
            font-weight: 600;
            color: #333;
        }

    .form-control {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-login {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 12px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: bold;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .btn-login:hover {
            background-color: #45a049;
        }

    .error-msg {
        color: red;
        margin-top: 15px;
        font-weight: bold;
    }
</style>

<div class="login-container">
    <h2>LandBank Login</h2>

    @using (Html.BeginForm("Login", "ATM", FormMethod.Post))
    {
        <div class="form-group">
            <label for="cardNumber">Card Number</label>
            @Html.TextBox("cardNumber", null, new { @class = "form-control", placeholder = "Enter your card number" })
        </div>

        <div class="form-group">
            <label for="pin">PIN</label>
            @Html.Password("pin", null, new { @class = "form-control", placeholder = "Enter your PIN" })
        </div>

        <input type="submit" value="Login" class="btn-login" />
    }

    @if (ViewBag.Error != null)
    {
        <div class="error-msg">@ViewBag.Error</div>
    }
</div>
