@{
    ViewData["Title"] = "Fund Transfer";
}

<h2>Fund Transfer</h2>

<form method="post">
    <label>Recipient Account Number:</label><br />
    <input type="text" name="recipientAccountNumber" required /><br /><br />

    <label>Amount to Transfer:</label><br />
    <input type="number" name="amount" step="0.01" required /><br /><br />

    <button type="submit">Transfer</button>
   <a href="@Url.Action("Dashboard", "ATM")" class="btn btn-secondary">CANCEL</a>
</form>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
