@{
    ViewData["Title"] = "Fund Transfer";
}

<style>
    body {
        background-color: #f1f8f4;
        font-family: 'Segoe UI', sans-serif;
    }

    .transfer-card {
        max-width: 550px;
        margin: 80px auto;
        padding: 30px;
        border-radius: 15px;
        background-color: white;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    }

        .transfer-card h2 {
            color: #2e7d32;
            text-align: center;
            margin-bottom: 25px;
        }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    input[type="text"],
    input[type="number"] {
        width: 100%;
        padding: 12px;
        font-size: 16px;
        border-radius: 8px;
        border: 1px solid #ccc;
    }

    .btn-submit {
        width: 100%;
        background-color: #43a047;
        color: white;
        padding: 12px;
        font-size: 16px;
        font-weight: bold;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

        .btn-submit:hover {
            background-color: #388e3c;
        }

    .btn-cancel {
        display: inline-block;
        margin-top: 15px;
        text-align: center;
        width: 100%;
        background-color: #b0bec5;
        color: white;
        padding: 10px;
        border-radius: 8px;
        text-decoration: none;
    }

        .btn-cancel:hover {
            background-color: #90a4ae;
        }

    .message-success {
        margin-top: 20px;
        font-weight: bold;
        text-align: center;
        color: #2e7d32;
    }

    .message-error {
        margin-top: 20px;
        font-weight: bold;
        text-align: center;
        color: red;
    }
</style>

<div class="transfer-card">
    <h2>Fund Transfer</h2>

    <form method="post">
        <div class="form-group">
            <label>Recipient Account Number:</label>
            <input type="text" name="recipientAccountNumber" required />
        </div>

        <div class="form-group">
            <label>Amount to Transfer:</label>
            <input type="number" name="amount" step="0.01" required />
        </div>

        <button type="submit" class="btn-submit">Transfer</button>
        <a href="@Url.Action("Dashboard", "ATM")" class="btn-cancel">Cancel</a>
    </form>

    @if (ViewBag.Message != null)
    {
        <div class="@(ViewBag.Message.Contains("success") ? "message-success" : "message-error")">
            @ViewBag.Message
        </div>
    }
</div>
